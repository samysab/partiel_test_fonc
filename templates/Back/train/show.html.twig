{% extends 'base_back.html.twig' %}

{% block title %}Train{% endblock %}

{% block body %}
    <h1>Train</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ train.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ train.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ train.description }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <div class="valign-wrapper row">
        <div class="col">
            <form method="post" action="{{ path('admin_train_edit', {'id': train.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ train.id) }}">
                <button class="btn">Modifier</button>
            </form>
        </div>
        <div>
            {{ include('Back/train/_delete_form.html.twig') }}
        </div>

    </div>

    <h3>Liste des wagons</h3>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Classe</th>
            <th>Type</th>
            <th>Nb places</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for wagon in train.wagons %}
            <tr>
                <td>{{ wagon.id }}</td>
                <td>{{ wagon.class }}</td>
                <td>{{ wagon.type }}</td>
                <td>{{ wagon.placeNb }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun train existant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
